<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/window_bg"
    android:elevation="100dp">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/imageInstance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="image"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_small_material"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/flavorInstance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="flavor"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_small_material"
        android:paddingLeft="5dp"
        android:layout_below="@+id/imageInstance" />
    <TextView
        android:id="@+id/netInstance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="network details"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_small_material"
        android:paddingLeft="5dp"
        android:layout_below="@+id/flavorInstance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/secInstance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="security groups"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_small_material"
        android:paddingLeft="5dp"
        android:layout_below="@+id/netInstance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>
</ScrollView>
</android.support.v7.widget.CardView>

