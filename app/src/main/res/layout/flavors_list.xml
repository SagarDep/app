<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/window_bg"
    android:elevation="100dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="@dimen/card_height"
        android:background="@color/accent"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">
        <!--android:layout_alignBottom="@+id/url"-->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flavor_icon"
        android:src="@drawable/ic_alarm_on_black_48dp"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </LinearLayout>

        <TextView
        android:id="@+id/nameFlavor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:paddingLeft="5dp"/>


    <TextView
        android:id="@+id/vcpusFlavor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="vcpus"
        android:textSize="@dimen/abc_text_size_small_material"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />

     <TextView
        android:id="@+id/ramFlavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="ram"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignRight="@+id/nameFlavor"
        android:layout_alignTop="@+id/nameFlavor"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/diskFlavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="disk"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignRight="@+id/vcpusFlavor"
        android:layout_alignTop="@+id/vcpusFlavor"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>


</RelativeLayout>
</android.support.v7.widget.CardView>

