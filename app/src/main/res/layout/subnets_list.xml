<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/card_height"
    app:cardBackgroundColor="@color/window_bg"
    android:elevation="100dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/accent"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subnets_icon"
                android:src="@drawable/ic_language_black_48dp"
                android:layout_gravity="center_vertical"
                android:padding="15dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/nameSubnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="250dp"
            android:paddingLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />


        <TextView
            android:id="@+id/cidrSubnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="cidr"
            android:textSize="@dimen/abc_text_size_small_material"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_alignTop="@+id/gwSubnet"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/emptySubnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text=""
            android:textSize="@dimen/abc_text_size_small_material"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/nameSubnet"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/gwSubnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="gateway"
            android:textSize="@dimen/abc_text_size_small_material"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/emptySubnet"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

